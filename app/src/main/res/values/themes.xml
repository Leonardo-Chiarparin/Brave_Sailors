<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main application theme -->
    <!-- No ActionBar, no title bar -->
    <style name="Theme.Brave_Sailors" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <!-- Background color of the splash window -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Static or animated splash image -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

        <!-- Theme applied after the splash screen disappears -->
        <item name="postSplashScreenTheme">@style/Theme.Brave_Sailors</item>

        <!-- ðŸš« Disable ActionBar and title bar ALSO during the splash screen -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
